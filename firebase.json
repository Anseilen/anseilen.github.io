{
  "hosting": {
    "public": "_site",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source":"/api/**",
        "function": "api"
      },
      {
        "source": "/signin",
        "destination": "/signin.html"
      },
      {
        "source": "/notices",
        "destination": "/notices.html"
      },
      {
        "source": "/charge",
        "destination": "/charge.html"
      },
      {
        "source": "/chaList",
        "destination": "/chaList.html"
      },
      {
        "source": "/useList",
        "destination": "/useList.html"
      },
      {
        "source": "/pricing",
        "destination": "/pricing.html"
      },
      {
        "source": "/signup",
        "destination": "/signup_updated.html"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
